<h2 class="large text-primary">Add house</h2>

<div>
    <form action="/Landlord/addHouse" method="post" class="form" enctype="multipart/form-data">
    <div class="form-group">
        <label>Type</label>
        <select name="Type" value='{{Type}}' >
            <option>Appartment</option>
            <option>Bunglow</option>
            <option>Pg</option>
        </select>
        </div>
        <div class="form-group">
    <label for="file">File</label>
    <input name="file" type="file" class="form-control">
</div>
    <div class="form-group">
    <label>Address</label>
    <input type="text" name="Address" value='{{Address}}' placeholder="address"/></div>
      <div class="form-group">
    <label>Description</label>
    <input type="text" name="Description" value='{{Description}}' placeholder="desc"/></div>
    <div class="form-group">
    <label>Rent</label>
    <input type="text" name="rent" value='{{rent}}' placeholder="price"/>
    </div>
    <button type="submit" class="registerbtn">add</button>

    </form>


</div>